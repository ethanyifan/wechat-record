.main .header-block {
  position: relative;
}
.main .header-block .banner {
  width: 100%;
  height: 100%;
}
.main .header-block .name {
  position: absolute;
  text-align: right;
  right: 210rpx;
  bottom: 16rpx;
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}
.main .header-block .header {
  position: absolute;
  width: 140rpx;
  height: 140rpx;
  bottom: 0;
  right: 24rpx;
  border-radius: 12rpx;
  transform: translateY(42rpx);
  background-image: url("data:image/jpg;base64,");
  background-size: cover;
}
.main .record-block .empty-record {
  padding: 128rpx 0;
  font-size: 30rpx;
  color: #737373;
  text-align: center;
  letter-spacing: 0.5rpx;
}
