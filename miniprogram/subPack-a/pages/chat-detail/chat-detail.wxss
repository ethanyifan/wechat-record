@import "/styles/common.wxss";
@import 'templates/record-item.wxss';
page {
  background-color: #EDEDED;
}
.custom-background {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: var(--index-background);
}
.main .main-blank {
  height: 24rpx;
}
.main .bottom-block-blank {
  height: calc(280rpx + var(--sb));
}
.bottom-block {
  width: 100vw;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #F6F6F6;
  border-top: var(--border-xs);
  z-index: var(--index-tab-bar);
}
.bottom-block .input-block {
  padding: 18rpx 20rpx 14rpx;
}
.bottom-block .input-block > .icon {
  width: 56rpx;
  height: auto;
  flex-shrink: 0;
  margin-bottom: 14rpx;
}
.bottom-block .input-block > .icon.audio {
  margin-right: 20rpx;
}
.bottom-block .input-block > .icon.emoji {
  margin-right: 24rpx;
}
.bottom-block .input-block .input {
  width: 100%;
  max-height: 190rpx;
  line-height: 40rpx;
  font-size: 34rpx;
  background-color: white;
  border-radius: 8rpx;
  margin-right: 20rpx;
  padding: 20rpx 24rpx;
  box-sizing: content-box;
}
.bottom-block .util-block {
  height: 0;
  overflow: hidden;
  transition: height 0.4s ease, padding-top 0.4s ease;
}
.bottom-block .util-block.show {
  height: 480rpx;
}
.bottom-block .util-block .swiper {
  width: 100%;
  height: 414rpx;
}
.bottom-block .util-block .swiper .swiper-item {
  width: 100%;
  height: 100%;
}
.bottom-block .util-block .swiper .swiper-item .util-swiper-wrapper {
  flex-wrap: wrap;
  padding: 32rpx 26rpx 0;
}
.bottom-block .util-block .swiper .swiper-item .util-swiper-wrapper .util-item {
  width: 25%;
  margin-bottom: 20rpx;
}
.bottom-block .util-block .swiper .swiper-item .util-swiper-wrapper .util-item .icon {
  width: 128rpx;
  height: auto;
  margin-bottom: 8rpx;
}
.bottom-block .util-block .swiper .swiper-item .util-swiper-wrapper .util-item .label {
  font-size: 24rpx;
  color: #898B88;
}
.bottom-block .util-block .pagination {
  padding: 26rpx 0;
}
.bottom-block .util-block .pagination .dot {
  width: 14rpx;
  height: 14rpx;
  background-color: #CCCECF;
  border-radius: 50%;
  margin-right: 20rpx;
}
.bottom-block .util-block .pagination .dot.active {
  background-color: #737474;
}
.bottom-block .util-block .pagination .dot:last-child {
  margin-right: 0;
}
.bottom-block .bottom-block-blank {
  width: 100%;
  height: calc(var(--sb));
}
