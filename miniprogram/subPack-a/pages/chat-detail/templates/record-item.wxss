@import "/styles/common.wxss";
.record-date {
  color: #9E9E9E;
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 36rpx;
}
.record-item {
  padding: 0 24rpx;
  margin-bottom: 34rpx;
}
.record-item .pop-content .name {
  color: #747474;
  margin-bottom: -10rpx;
  padding-left: 24rpx;
  font-size: 24rpx;
  transform: translateY(-12rpx);
}
.record-item .pop-content .pop-card {
  max-width: 500rpx;
  padding: 18rpx 24rpx 22rpx;
  border-radius: 8rpx;
}
.record-item .pop-content .pop-card .text,
.record-item .pop-content .pop-card .audio {
  color: #0f180a;
  line-height: 42rpx;
  font-size: 34rpx;
}
.record-item .pop-content .pop-card .audio {
  font-size: 30rpx;
}
.record-item .pop-content .pop-card .audio-icon {
  width: 42rpx;
  height: auto;
  margin-left: 12rpx;
}
.record-item .pop-content .transfer {
  position: relative;
}
.record-item .pop-content .transfer .transfer-amount {
  position: absolute;
  left: 118rpx;
  top: 28rpx;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}
.record-item .pop-content .transfer .transfer-remark {
  max-width: 320rpx;
  position: absolute;
  left: 124rpx;
  top: 68rpx;
  color: white;
  font-size: 24rpx;
}
.record-item .pop-content .transfer .transfer-remark.expired {
  top: 62rpx;
}
.record-item .pop-content .transfer .red-pack-remark {
  max-width: 320rpx;
  position: absolute;
  left: 124rpx;
  top: 36rpx;
  color: white;
  font-size: 34rpx;
  font-weight: bold;
}
.record-item .pop-content .transfer .red-pack-remark.expired {
  top: 20rpx;
}
.record-item .pop-content .transfer .transfer-bg {
  width: 468rpx;
  height: auto;
  border-radius: 8rpx;
}
.record-item .pop-content .pop-arrow {
  width: 12rpx;
  height: auto;
  transform: translateY(24rpx);
}
.record-item .pop-content .pop-arrow.reverse {
  transform: translateY(24rpx) rotate(180deg);
}
.record-item .pop-content .pop-arrow.pop-arrow-left {
  margin-left: 12rpx;
}
.record-item .pop-content .pop-arrow.pop-arrow-right {
  margin-right: 12rpx;
}
.record-item .pop-content .system-text {
  border-radius: 6rpx;
  padding: 0 20rpx;
  background-color: rgba(237, 237, 237, 0.5);
}
.record-item .pop-content .system-text .system-text-info {
  line-height: 46rpx;
  font-size: 29rpx;
  color: #A7A7A7;
}
.record-item .pop-content .system-text .system-text-info .red-pack-notice-span {
  color: #FD9830;
}
.record-item .pop-content .system-text .red-pack-notice-icon {
  width: 28rpx;
  height: auto;
  border-radius: 4rpx;
  margin-right: 12rpx;
}
.record-item .image {
  border-radius: 12rpx;
}
.record-item.left {
  flex-direction: row-reverse;
}
.record-item.left .image {
  margin-left: 24rpx;
}
.record-item.left .pop-content .pop-card {
  justify-content: flex-start;
  background-color: white;
}
.record-item.left .pop-content .pop-arrow-right {
  display: none;
}
.record-item.left .pop-content .audio-icon-right {
  display: none;
}
.record-item.right .image {
  margin-right: 24rpx;
}
.record-item.right .pop-content .pop-card {
  justify-content: flex-end;
  min-height: 76rpx;
  background-color: #95EB69;
}
.record-item.right .pop-content .pop-arrow-left {
  display: none;
}
.record-item.right .pop-content .audio-icon-left {
  display: none;
}
.record-item .header {
  width: 82rpx;
  height: 82rpx;
  border-radius: 6rpx;
  flex-shrink: 0;
  background-image: url("data:image/jpg;base64,");
  background-size: cover;
}
.record-item.background-fixed .system-text-info {
  color: #181818 !important;
}
