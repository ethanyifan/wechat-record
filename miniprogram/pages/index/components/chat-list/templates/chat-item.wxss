@import "/styles/common.wxss";
.chat-item {
  position: relative;
  padding: 24rpx 32rpx;
  background-color: white;
}
.chat-item:active {
  background-color: #E5E5E5;
}
.chat-item.top {
  background-color: #F7F7F7;
}
.chat-item.top:active {
  background-color: #DEDEDE;
}
.chat-item::after {
  content: '';
  width: calc(100% - (32rpx + 96rpx + 24rpx));
  height: 1rpx;
  background-color: #E5E5E5;
  position: absolute;
  right: 0;
  bottom: 0;
}
.chat-item .header-block {
  width: 96rpx;
  height: 96rpx;
  flex-shrink: 0;
  margin-right: 24rpx;
  position: relative;
}
.chat-item .header-block .header {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background-image: url("data:image/jpg;base64,");
  background-size: cover;
}
.chat-item .header-block .badge {
  position: absolute;
  right: 0;
  top: 0;
  transform: translate(14rpx, -14rpx);
}
.chat-item .header-block .badge.mini {
  transform: translate(6rpx, -6rpx);
}
.chat-item .info-block {
  width: 100%;
  padding-top: 4rpx;
}
.chat-item .info-block .name {
  font-size: 32rpx;
  color: #191919;
  margin-bottom: 6rpx;
}
.chat-item .info-block .name.blue {
  color: #576B94;
}
.chat-item .info-block .content {
  font-size: 30rpx;
  color: #B3B3B3;
}
.chat-item .info-block .content .tag {
  color: #FA5051;
}
.chat-item .date-block {
  flex-shrink: 0;
  padding-left: 6rpx;
}
.chat-item .date-block .date {
  font-size: 26rpx;
  color: #CCCCCC;
}
