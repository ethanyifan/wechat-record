@import "/styles/common.wxss";
.sf-item .title {
  position: relative;
  padding-left: 28rpx;
}
.sf-item .title::before {
  content: '';
  width: 12rpx;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background-color: var(--color-primary);
}
.sf-item .media-uploader + .description {
  margin-top: -6rpx;
}
.sf-item .description {
  font-size: 24rpx;
  color: var(--color-subtitle);
}
.sf-item .input {
  width: 100%;
  height: 88rpx;
  border: var(--border-xs);
  border-radius: var(--border-radius-sm);
}
.sf-item .input-picker {
  flex-shrink: 0;
}
.sf-item .input-button {
  height: fit-content;
}
.sf-item .textarea {
  border: var(--border-xs);
  border-radius: var(--border-radius-sm);
}
.sf-item .picker .picker-wrapper {
  height: 88rpx;
  border: var(--border-xs);
  border-radius: var(--border-radius-sm);
}
.sf-item .picker .picker-wrapper .placeholder {
  color: var(--color-placeholder);
}
.sf-item .picker .picker-wrapper .icon {
  width: 24rpx;
  height: auto;
}
